        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >

            <co.appsazan.mystore.myview.MyTextViewBold
                android:id="@+id/txtTitleAppList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:text="MyTitle" />

            <co.appsazan.mystore.myview.MyTextView
                android:id="@+id/txtMoreAppList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:text="بیشتر" />

<co.appsazan.mystore.myview.MyTextViewShape
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/fa_angle_left"

    android:textSize="23dp"

    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:layout_marginLeft="5dp" />
        </RelativeLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rycAppList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativeLayout" ></android.support.v7.widget.RecyclerView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#0affffff" android:layout_below="@+id/rycAppList"></LinearLayout>



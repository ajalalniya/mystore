<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:orientation="vertical"

    >
    <RelativeLayout
        android:id="@+id/card_view"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_hight"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_between_card"


        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        >

        <ImageView
            android:id="@+id/card_img"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="5dp" />

        <co.appsazan.mystore.myview.MyTextView
        android:id="@+id/card_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"

        android:gravity="right"
        android:maxLength="12"
        android:text="salam"
        android:textSize="12sp"
        android:layout_below="@+id/card_img"
        />
        <co.appsazan.mystore.myview.MyTextView
            android:id="@+id/desc_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:maxLength="21"
            android:text="salam"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:textSize="12sp"
            android:layout_below="@+id/card_txt"
            android:layout_alignLeft="@+id/card_txt"
            android:layout_alignStart="@+id/card_txt" />

    </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
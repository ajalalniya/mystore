<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/relBestApp"
    android:layout_width="wrap_content"
    app:cardCornerRadius="5dp"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/card_view_cafe"
        android:layout_width="@dimen/card_width_best"
        android:layout_height="@dimen/card_hight_best"
        android:layout_gravity="center"

        android:background="@color/colorPrimary"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            >

            <ImageView
                android:id="@+id/imgBAL"
                android:layout_width="match_parent"
                android:layout_height="110dp"

                android:layout_alignParentLeft="true"

                android:layout_alignParentTop="true"
                android:padding="5dp" />

            <co.appsazan.mystore.myview.MyTextView
                android:id="@+id/txtTitleBAL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgBAL"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"

                android:gravity="right"
                android:maxLength="21"


                android:text="salam"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/overflowWishList"
                android:layout_width="@dimen/ic_album_overflow_width_best"
                android:layout_height="@dimen/ic_album_overflow_height_best"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/txtTitleBAL"
                android:scaleType="centerCrop"
                android:src="@drawable/dots"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/ic_album_overflow_margin_top_best"

                />

            <co.appsazan.mystore.myview.MyTextView
                android:id="@+id/txtDescBAL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/txtTitleBAL"
                android:layout_below="@+id/txtTitleBAL"
                android:text="New Text" />

        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>